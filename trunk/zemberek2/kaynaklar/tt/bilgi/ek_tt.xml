<ek-bilgisi>

    <!-- ek kumeleri -->
    <ek-kumeleri>

        <ek-kumesi ad="IS_DURUM">
            <ek>IS_UZAKLASMA_DAN</ek>
            <ek>IS_BULUNMA_DA</ek>
            <ek>IS_YUKLEME_NE</ek>
            <ek>IS_YAKLASMA_GA</ek>
        </ek-kumesi>

        <ek-kumesi ad="IS_IYELIK">
            <ek>IS_IYELIK_BEN_EM</ek>
            <ek>IS_IYELIK_SEN_EN</ek>
            <ek>IS_IYELIK_O_SE</ek>
        </ek-kumesi>


    </ek-kumeleri>

    <!-- ekler -->
    <ekler>

        <!-- isim yalin. -->
        <ek ad="IS_KOK" uretim="">
            <ardisil-ekler>
                <kume>IS_DURUM</kume>
                <kume>IS_IYELIK</kume>
                <aek>IS_COGUL_LAR</aek>
            </ardisil-ekler>
        </ek>

        <!-- tellär (diller), ağaçlar (ağaçlar), könnär (günler), qawınnar (kavunlar) -->
        <ek ad="IS_COGUL_LAR" uretim="@lAr">
            <ardisil-ekler>
                <kume>IS_DURUM</kume>
                <kume>IS_IYELIK</kume>
            </ardisil-ekler>
        </ek>

        <!-- teldän (dilden), ağaçtan (ağaçtan)  -->
        <ek ad="IS_UZAKLASMA_DAN" uretim="@dAn"/>

        <!-- teldä (dilde), ağaçta (ağaçta) -->
        <ek ad="IS_BULUNMA_DA" uretim=">dA"/>

        <!-- telne (dili), ağaçnı (ağacı) -->
        <ek ad="IS_YUKLEME_NE" uretim="nE"/>

        <!-- telgä (dile), ağaçqa (ağaca)  -->
        <ek ad="IS_YAKLASMA_GA" uretim=">gA">
            <ozel-durum ad="ON_EK" uretim="+ña">
                <on-ek>IS_IYELIK_BEN_EM</on-ek>
                <on-ek>IS_IYELIK_SEN_EN</on-ek>
                <on-ek>IS_IYELIK_O_SE</on-ek>
            </ozel-durum>
        </ek>

        <!-- Birinci Kişi  	-m, -em, -ım  -->
        <ek ad="IS_IYELIK_BEN_EM" uretim="Em">
            <ardisil-ekler>
                <kume>IS_DURUM</kume>
            </ardisil-ekler>
        </ek>

        <ek ad="IS_IYELIK_SEN_EN" uretim="Eñ">
            <ardisil-ekler>
                <kume>IS_DURUM</kume>
            </ardisil-ekler>
        </ek>

        <ek ad="IS_IYELIK_O_SE" uretim="+sE">
            <ardisil-ekler>
                <kume>IS_DURUM</kume>
            </ardisil-ekler>
        </ek>    

    </ekler>

</ek-bilgisi>
